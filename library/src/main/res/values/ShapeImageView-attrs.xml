<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="shape" format="enum">
        <enum name="rectangle" value="0" />
        <enum name="circle" value="1" />
    </attr>
    <!--约束比例关系-->
    <attr name="ratioReferTo" format="enum">
        <enum name="Width" value="0" />
        <enum name="Height" value="1" />
    </attr>
    <attr name="ratioWidth" format="integer" />
    <attr name="ratioHeight" format="integer" />
    <attr name="borderColor" format="color" />
    <attr name="borderWidth" format="dimension" />
    <declare-styleable name="ShapeImageView">
        <attr name="shape" />
        <attr name="android:radius" />
        <attr name="android:topLeftRadius" />
        <attr name="android:topRightRadius" />
        <attr name="android:bottomRightRadius" />
        <attr name="android:bottomLeftRadius" />
        <attr name="borderColor" />
        <attr name="borderWidth" />
        <attr name="ratioWidth" />
        <attr name="ratioHeight" />
        <attr name="ratioReferTo" />
    </declare-styleable>
</resources>